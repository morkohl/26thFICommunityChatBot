{
    "linterOptions": {
        "exclude": [
            "test/**/*.test.ts"
        ]
    },
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [ 160 ]
        },

        //warning only
        "await-promise": {
            "severity": "warning"
        },
        "no-console": {
            "severity": "warning"
        },

        //disabled checks,
        "ordered-imports": false,
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}
